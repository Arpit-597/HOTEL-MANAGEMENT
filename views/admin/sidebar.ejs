<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/dashboard" class="brand-link" style="text-decoration: none;">
    <img src="/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">AdminLTE 3</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="<%= user.image?.url || '/assets/images/default-avatar.png' %>" class="img-circle elevation-2" style="width: 40px; height: 40px; object-fit: cover;" alt="User Image">
      </div>
      <div class="info">
        <a href="/dashboard" style="text-decoration: none;" class="d-block">Hello, <%= name %></a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

        <% if (role === 'admin') { %>
        <!-- Admin Menu -->
        <li class="nav-item has-treeview">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-door-open"></i> <!-- Changed to door-open for Rooms -->
            <p>
              Rooms
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/rooms/display" class="nav-link active">
                <i class="far fa-circle nav-icon"></i>
                <p>Display</p>
              </a>
            </li>
          </ul>
        </li>

        <li class="nav-item has-treeview">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-book"></i> <!-- Changed to book icon for Booking -->
            <p>
              Booking
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/admin/bookings" class="nav-link active">
                <i class="far fa-circle nav-icon"></i>
                <p>Display</p>
              </a>
            </li>
          </ul>
        </li>

        <li class="nav-item">
          <a href="/admin/booking/customers" class="nav-link active">
            <i class="nav-icon fas fa-book"></i> <!-- Changed to book icon for Booking -->
            <p>
              Customers
            </p>
          </a>
        </li>

        <li class="nav-item">
          <a href="/logout" class="nav-link">
            <i class="nav-icon fas fa-sign-out-alt"></i>
            <p>LogOut</p>
          </a>
        </li>

        <% } else if (role === 'user') { %>
        <!-- User Menu -->
        <li class="nav-item">
          <a href="/user/bookings" class="nav-link">
            <i class="nav-icon fas fa-bed"></i>
            <p>My Room</p>
          </a>
        </li>

        <!-- Update User Info -->
        <li class="nav-item">
          <a href="/user/update/<%= user ? user.id : '' %>" class="nav-link" style="display: flex; gap: 5px;">
            <i class="nav-icon fa-solid fa-pen"></i>
            <p>Update Info</p>
          </a>
        </li>

        <li class="nav-item">
          <a href="/logout" class="nav-link">
            <i class="nav-icon fas fa-sign-out-alt"></i>
            <p>LogOut</p>
          </a>
        </li>

        <% } else { %>
        <!-- Default fallback -->
        <li class="nav-item">
          <a href="/logout" class="nav-link">
            <i class="nav-icon fas fa-sign-out-alt"></i>
            <p>LogOut</p>
          </a>
        </li>
        <% } %>

        <li class="nav-item">
          <a href="/change-password" class="nav-link">
            <i class="nav-icon fas fa-key"></i>
            <p>Change Password</p>
          </a>
        </li>


      </ul>
    </nav>
  </div>
</aside>